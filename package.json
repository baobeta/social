{
  "name": "social-media-app",
  "version": "1.0.0",
  "private": true,
  "description": "A full-stack social application with Vue and Express",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:backend": "npm run dev -w @social/backend",
    "dev:frontend": "npm run dev -w @social/frontend",
    "dev:frontend-react": "npm run dev -w @social/frontend-react",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build -w @social/backend",
    "build:frontend": "npm run build -w @social/frontend",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test -w @social/backend",
    "test:frontend": "npm run test -w @social/frontend",
    "test:e2e": "NODE_ENV=e2e playwright test",
    "test:e2e:ui": "NODE_ENV=e2e playwright test --ui",
    "test:e2e:headed": "NODE_ENV=e2e playwright test --headed",
    "test:e2e:debug": "NODE_ENV=e2e playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:setup": "NODE_ENV=e2e bash scripts/setup-e2e-db.sh",
    "test:e2e:clean": "NODE_ENV=e2e tsx e2e/setup/database.ts clean",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "db:migrate": "npm run db:migrate -w @social/backend",
    "db:seed": "npm run db:seed -w @social/backend",
    "db:studio": "npm run db:studio -w @social/backend"
  },
  "keywords": [
    "social",
    "vue",
    "express",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.19.1",
    "dotenv": "^16.0.3",
    "postgres": "^3.4.3",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@primevue/themes": "^4.5.0"
  }
}
