{
  "name": "social-media-app",
  "version": "1.0.0",
  "private": true,
  "description": "A full-stack social media application with Vue and Express",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:backend": "npm run dev -w @social/backend",
    "dev:frontend": "npm run dev -w @social/frontend",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build -w @social/backend",
    "build:frontend": "npm run build -w @social/frontend",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test -w @social/backend",
    "test:frontend": "npm run test -w @social/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "db:migrate": "npm run db:migrate -w @social/backend",
    "db:seed": "npm run db:seed -w @social/backend",
    "db:studio": "npm run db:studio -w @social/backend"
  },
  "keywords": [
    "social-media",
    "vue",
    "express",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@primevue/themes": "^4.5.0"
  }
}
