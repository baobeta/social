{
  "name": "@social/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Backend API for social application",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node build.mjs",
    "build:check": "tsc -p tsconfig.build.json --noEmit",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:setup": "./scripts/setup-test-db.sh",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.37.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "postgres": "^3.4.5",
    "uuid": "^11.0.3",
    "validator": "^13.15.23",
    "xss": "^1.0.15",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.10",
    "@vitest/coverage-v8": "^2.1.8",
    "drizzle-kit": "^0.29.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.0.0",
    "testcontainers": "^10.15.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.0",
    "vitest": "^2.1.8"
  }
}
