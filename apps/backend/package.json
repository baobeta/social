{
  "name": "@social/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Backend API for social media application",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "express": "^4.21.2",
    "drizzle-orm": "^0.37.0",
    "postgres": "^3.4.5",
    "zod": "^3.24.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-session": "^1.18.1",
    "connect-redis": "^7.1.1",
    "redis": "^4.7.0",
    "helmet": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "express-rate-limit": "^7.4.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/express-session": "^1.18.0",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^10.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "drizzle-kit": "^0.29.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.0.0",
    "testcontainers": "^10.15.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2"
  }
}
